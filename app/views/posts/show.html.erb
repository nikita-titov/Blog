<div id="page_wrapper">
	<h1 class="title">
	  <%= @post.title %>
	</h1>

	<p class="date">
	  Создано <%= time_ago_in_words(@post.created_at) %> назад
	  | <%= link_to 'Изменить', edit_post_path(@post) %>
	  | <%= link_to 'Удалить', post_path(@post), method: :delete, data: {confirm: 'Вы точно уверены?'} %>
	</p>

	<p class="body">
	  <%= @post.body %>
	</p>

	<div id="comments">
		<h2><%= @post.comments.count %> Комментарий</h2>
		<%= render @post.comments %>

		<h3> Добавить комментарий:</h3>
		<%= render "comments/form" %>
	</div>
</div>